<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Black Color Button"
        android:backgroundTint="@color/black"
        android:onClick="changeBackgroundcolor"/>

    <Button
        android:id="@+id/btn_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Red Color Button"
        android:backgroundTint="#8F0909"
        android:onClick="changeBackgroundcolor" />

    <Button
        android:layout_width="wrap_content"
        android:id="@+id/btn_yello"
        android:layout_height="wrap_content"
        android:text="Yello Color Button"
        android:backgroundTint="#C6B30B"
        android:onClick="changeBackgroundcolor"/>

    <Button
        android:id="@+id/btn_green"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Green Color Button"
        android:backgroundTint="#07550A"
        android:onClick="changeBackgroundcolor"/>

    <Button
        android:id="@+id/btn_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#5910DC"
        android:text="Blue Color Button"
        android:onClick="changeBackgroundcolor"       />


</LinearLayout>